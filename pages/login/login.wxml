<view class="box">
    <van-image
      width="100%"
      height="250"
      src="https://trd.dachan.com.cn/dacheng/resource/image/a/a/2020/04/09/12/9.png"
    />
    <view class="header">
        <van-image
          custom-class="image-view"
          width="15"
          height="21"
          src="https://trd.dachan.com.cn/dacheng/resource/image/a/a/2020/04/09/12/10.png"
        />
        <van-cell-group>
          <van-field
            input-class="input-view"
            value="{{ account }}"
            placeholder="请输入账号"
            border="{{ false }}"
            bind:change="onChangeA"
          />
        </van-cell-group>
    </view>
    <view class="header">
        <van-image
          custom-class="image-view"
          width="15"
          height="21"
          src="https://trd.dachan.com.cn/dacheng/resource/image/a/a/2020/04/09/12/11.png"
        />
        <van-cell-group>
          <van-field
            input-class="input-view"
            value="{{ password }}"
            placeholder="请输入密码"
            border="{{ false }}"
            bind:change="onChangeB"
          />
        </van-cell-group>
    </view>
    <view class="button" bindtap="loginA">
        立即登录
    </view>
    <van-toast id="van-toast" />
</view>