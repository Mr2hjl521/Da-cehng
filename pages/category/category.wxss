.categoryBox {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.left {
  width: 250rpx;
  background-color: #fafafa;
}

.sidebar {
  width: 100% !important;
}

.right {
  width: 70%;
  padding: 0 20rpx;
}

.goodsBox {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.goodsLeft {
  width: 220rpx;
  height: 200rpx;
}

.goodsLeft image {
  width: 220rpx;
  height: 200rpx;
}

.goodsRight {
  padding: 10rpx;
  box-sizing: border-box;
  width: 305rpx;
  overflow: hidden;
}

.goodsTitle {
  font-size: 34rpx;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goodsDes {
  width: 100%;
  height: 90rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #a2a3a5;
  white-space: wrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goodsPrice {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 36rpx;
 color: #FE406C;
}
.delGoodsPrice{
  font-size: 30rpx;
  font-weight: 700;
  color: rgb(99, 91, 91);
  text-decoration:line-through; 
  margin-left: 10rpx
}

/* 授权弹窗部分样式 */
.title2 {
  text-align: center;
  font-size: 40rpx;
  margin-top: 30rpx;
}

.btn_txt {
  padding: 20rpx;
  padding-top: 20rpx;
  height: 150rpx;
  font-size: 34rpx;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  color: #A8A8A8;
  letter-spacing: 1.5rpx;
}

.btn_spy {
  height: 72rpx;
  line-height: 72rpx;
  width: 50%;
  background-color: #fff;
  border-radius: 0;
}

.btn_spy_one {
  float: right;
  color: #687AA0;
}

.btn_spy_two {
  float: left;
}

.van-popup {
  border-radius: 2px;
  overflow: hidden;
  height: 300rpx;
  width: 75%;
  position: fixed;
  top: 400rpx;
  left: 20%;
  background: grey;
  background-color: #fff !important;
}
