.page {
  padding: 20rpx 60rpx 0 60rpx ;
}

.top {
  width: 100%;
  height: 200rpx;
}
.top .a {
  width: 200rpx;
  height: 100%;
  display: inline-block;
  font-size: 40rpx;
  font-weight: 700;
  float: left;
}
.top .b {
  float: right;
  display: inline-block;
  width: 400rpx;
  height: 60rpx;
  margin-top: 50rpx;
}
.top .b button {
  display: inline-block;
    width: 160rpx;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 24rpx;
    margin-left: 20rpx;
}
.address {
  width: 100%;
  height: 160rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
.address view:first-child label {
  float: right
}
.time {
  width: 100%;
  overflow: hidden;
  height: 40rpx;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.time label {
  margin-left: 20rpx;
}
.ztAddress {
  width: 100%;
  height: 290rpx ;
}
.ztAddress .ztleft{
    display: inline-block;
    height: 80rpx;
    font-size: 28rpx;
      width: 70%;
}
.ztAddress .zeright {
  display: inline-block;
  width: 30%;
  height: 80rpx;
}
.ztAddress .zeright button{
  width: 75%;
  height: 50rpx;
  font-size: 23rpx;
}


