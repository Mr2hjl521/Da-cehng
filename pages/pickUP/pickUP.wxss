page{
  width: 100%;
  height: 100%;
  background: #f2f2f2
}
.boxone {
  border-radius: 20rpx;
  height: 100%;
  width: 90%;
  margin: 5%;
  background: white;
  overflow: hidden;
}

.status {
  margin: 20rpx 0;
  height: 60rpx;
  display: flex;
}
.statusLeft {
  display: inline-block;
  float: left;
  font-size: 28rpx;
}
.statuskey {
  font-size: 26rpx;
  display: inline-block;
  float: right;
  /* margin-right: 5%; */
}

.boxlist {
  padding: 10rpx;
  height: 180rpx;
  position: relative;
}

.boxlist_img {
  position: absolute;
  left: 10%;
  top: 0;
  height: 150rpx;
  width: 150rpx;
  padding: 15rpx;
  background: #dcdcdc;
  border-radius: 10px;
  overflow: hidden;
}

.boxlist_img image {
  height: 100%;
  width: 100%;
  border-radius: 10px;
  overflow: hidden;
}

.boxlist_txt {
  position: absolute;
  left: 40%;
  font-size: 26rpx;
}

.boxlist_num{
  position: absolute;
  line-height: 150rpx;
  left: 80%;
  top: 0;
}
.txt {
  line-height: 75rpx;
}
.operate{
  font-size: 24rpx;
  padding-bottom: 30rpx;
  position: relative;
} 
.operate>text{
    font-size: 28rpx;
}
.btnone{
  position: absolute;
  top: -10rpx;
  right: 30%;
}
.btntwo{
  position: absolute;
  top: 0;
  top: -10rpx;
  right: 40rpx;
}
.addresskey{
  margin-left: 10%;
  float: left;
  font-size: 24rpx;
}
.icon-text{
  margin-left: 75rpx;
}